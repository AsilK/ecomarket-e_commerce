@model CategoryListViewModel

<div class="list-group shadow-sm">
    <a asp-controller="Shop" asp-action="List" class="list-group-item list-group-item-action @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active" : "")">
        <i class="bi bi-grid-fill me-2"></i> Tüm Kategoriler
    </a>
    @foreach (var item in Model.Categories)
    {
        var isActive = Model.SelectedCategory == item.Name.ToLower();
        <a asp-controller="Shop"
           asp-action="List"
           asp-route-category="@item.Name.ToLower()"
           class="list-group-item list-group-item-action @(isActive ? "active" : "")">
            <i class="bi @(isActive ? "bi-check-circle-fill" : "bi-tag") me-2"></i> @item.Name
        </a>
    }
</div>