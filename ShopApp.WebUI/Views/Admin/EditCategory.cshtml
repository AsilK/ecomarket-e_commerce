@model CategoryModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kategori Düzenle</h1>
    <a href="/admin/categories" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kategori Bilgileri</h6>
            </div>
            <div class="card-body">
                <form asp-controller="Admin" asp-action="EditCategory" method="post">
                    <input type="hidden" name="categoryId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" />
                         <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bu Kategorideki Ürünler</h6>
            </div>
            <div class="card-body">
                @if (Model.Products.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="width:50px;">#ID</th>
                                    <th scope="col" style="width:80px;">Görsel</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col" style="width:120px;">Fiyat</th>
                                    <th scope="col" style="width:160px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/img/@item.ImageUrl" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                        </td>
                                        <td class="fw-bold">@item.Name</td>
                                        <td>@item.Price?.ToString("c")</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm me-1 shadow-sm" href="/admin/products/@item.Id" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <form action="/admin/deletefromcategory" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü kategoriden çıkarmak istediğinize emin misiniz?');">
                                                <input type="hidden" name="productId" value="@item.Id" />
                                                <input type="hidden" name="categoryId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm shadow-sm" title="Kategoriden Çıkar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning m-3" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i> Bu kategoriye ait ürün bulunmamaktadır.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
